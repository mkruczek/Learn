<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pl.michalkruczek.learn.RepeatActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/question_2" />

    <TextView
        android:id="@+id/repeat_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_margin="15sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/correct_answer" />

    <TextView
        android:id="@+id/repeat_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_margin="15sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/yours_help_description" />

    <TextView
        android:id="@+id/repeat_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_margin="15sp"/>

    <Button
        android:id="@+id/repeat_buttonShowAnswer"
        android:onClick="showAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:text="@string/show_answer" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/repeat_buttonGoodAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:layout_weight="1"
            android:background="@android:color/holo_green_dark"
            android:onClick="goodAnswer"
            android:text="@string/good"
            android:visibility="invisible" />

        <Button
            android:id="@+id/repeat_buttonWrongAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:layout_weight="1"
            android:background="@android:color/holo_red_dark"
            android:onClick="wrongAnswer"
            android:text="@string/wrong"
            android:visibility="invisible" />

    </LinearLayout>

    <Button
        android:id="@+id/repeat_buttonDetailsQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:onClick="detailsQuestion"
        android:text="@string/details_update_delete"
        android:visibility="invisible" />

    <Button
        android:id="@+id/repeat_buttonNextQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:text="@string/next_question"
        android:visibility="invisible" />
</LinearLayout>
